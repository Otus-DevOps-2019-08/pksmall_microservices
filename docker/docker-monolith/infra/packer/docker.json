{
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `gcp-proj-id`}}",
      "image_name": "reddit-docker-{{timestamp}}",
      "image_family": "reddit-docker-base",
      "source_image_family": "{{user `src-img-fml`}}",
      "zone": "europe-west1-b",
      "ssh_username": "appuser",
      "machine_type": "{{user `mach-type`}}",
      "disk_size": "{{user `disk-size`}}",
      "disk_type": "{{user `disk-type`}}",
      "image_description": "{{user `img-desc`}}",
      "network": "{{user `net-name`}}",
      "tags": "{{user `tag`}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible/playbooks/packer_docker.yml"
    }
  ]
}
